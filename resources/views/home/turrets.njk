{% extends "master" %}

{% block content %}

<div class="panel panel-default">
  <div class="panel-heading">
    All Turrets
  </div>
  <div class="panel-body">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Level</th>
          <th>Nation</th>
          <th>Weight</th>
          <th>Price</th>
          <th>Armor</th>
          <th>Turret Traverse</th>
          <th>View Range</th>
        </tr>
      </thead>
      <tbody>
        {% for turret in turrets %}
          <tr>
            <td>{{ turret.name }}</td>
            <td>{{ turret.level }}</td>
            <td>{{ turret.nation.name }}</td>
            <td>{{ turret.weight }}</td>
            <td>{{ turret.price }}</td>
            <td>{{ turret.armor }}</td>
            <td>{{ turret.turret_traverse }}</td>
            <td>{{ turret.view_range }}</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
</div>

{% endblock %}
