{% extends "master" %}

{% block content %}

<div class="panel panel-default">
  <div class="panel-heading">
    All Radios
  </div>
  <div class="panel-body">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Level</th>
          <th>Nation</th>
          <th>Weight</th>
          <th>Price</th>
          <th>Signal Range</th>
        </tr>
      </thead>
      <tbody>
        {% for radio in radios %}
          <tr>
            <td>{{ radio.name }}</td>
            <td>{{ radio.level }}</td>
            <td>{{ radio.nation.name }}</td>
            <td>{{ radio.weight }}</td>
            <td>{{ radio.price }}</td>
            <td>{{ radio.signal_range }}</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
</div>


{% endblock %}
