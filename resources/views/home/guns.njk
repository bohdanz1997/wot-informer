{% extends "master" %}

{% block content %}

<div class="panel panel-default">
  <div class="panel-heading">
    All Guns
  </div>
  <div class="panel-body">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Level</th>
          <th>Nation</th>
          <th>Weight</th>
          <th>Price</th>
          <th>Damage</th>
          <th>Penetration</th>
          <th>Accuracy</th>
          <th>Aim time</th>
        </tr>
      </thead>
      <tbody>
        {% for gun in guns %}
          <tr>
            <td>{{ gun.name }}</td>
            <td>{{ gun.level }}</td>
            <td>{{ gun.nation.name }}</td>
            <td>{{ gun.weight }}</td>
            <td>{{ gun.price }}</td>
            <td>{{ gun.damage }}</td>
            <td>{{ gun.penetration }}</td>
            <td>{{ gun.accuracy }}</td>
            <td>{{ gun.aim_time }}</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
</div>

{% endblock %}
