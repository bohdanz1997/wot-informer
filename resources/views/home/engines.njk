{% extends "master" %}

{% block content %}

<div class="panel panel-default">
  <div class="panel-heading">
    All Engines
  </div>
  <div class="panel-body">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Level</th>
          <th>Nation</th>
          <th>Weight</th>
          <th>Price</th>
          <th>Power</th>
          <th>Chance Of Fire</th>
        </tr>
      </thead>
      <tbody>
        {% for engine in engines %}
          <tr>
            <td>{{ engine.name }}</td>
            <td>{{ engine.level }}</td>
            <td>{{ engine.nation.name }}</td>
            <td>{{ engine.weight }}</td>
            <td>{{ engine.price }}</td>
            <td>{{ engine.power }}</td>
            <td>{{ engine.chance_of_fire }}</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
</div>

{% endblock %}
