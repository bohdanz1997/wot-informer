{% extends "admin" %}

{% block content %}

  <div class="panel panel-default">
    <div class="panel-heading">
      All Files
    </div>
    <div class="panel-body">
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalCreate">
        + Upload Files
      </button>
      <div class="row">
        {% for item in files %}
          <div class="col-md-2 col-xs-4">
            <div class="thumbnail file-wrapper">
              <img class="" src="/assets/img/{{item.name}}" title="{{item.name}}">
              <div class="caption">
                {{ form.open({action: 'FilesController.destroy', params: {id: item.id}, class: 'form_delete' }) }}
                  {{ csrfField }}
                  {{ form.submit('X', 'delete', { class: "remove-btn btn btn-default btn-sm" }) }}
                {{ form.close() }}
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>

{% include "admin/files/create" %}

{% endblock %}
