{% extends "admin" %}

{% block content %}

<div class="col-md-8">
  <div class="panel panel-default">
    <div class="panel-heading">
      General
    </div>
    <div class="panel-body">
      <div class="list-group">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Name</th>
              <th>Level</th>
              <th>Price</th>
              <th>Nation</th>
              <th>Vehicle</th>
            </tr>
          </thead>
          <tbody>
            {% for body in bodies %}
              <tr>
                <td>{{ body.name }}</td>
                <td>{{ body.level }}</td>
                <td>{{ body.price }}</td>
                <td>{{ body.nation.name }}</td>
                <td>{{ body.vehicle.name }}</td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<div class="col-md-4">
  <div class="panel panel-default">
    <div class="">
      {{ form.open({action: 'FilesController.store', files: true, class: 'form-horizontal dropzone', id: 'formCreate'}) }}

      {{ csrfField }}

      <div class="fallback">
          {{ form.file('file', { class: 'form-control' }) }}
      </div>

      {{ form.close() }}
    </div>
  </div>
</div>

{% endblock %}
