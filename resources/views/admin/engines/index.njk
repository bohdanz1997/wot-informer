{% extends "admin" %}

{% block content %}

<div class="panel panel-default">
  <div class="panel-heading">
    All Engines
  </div>
  <div class="panel-body">
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalCreate">
      + Add Engine
    </button>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Level</th>
          <th>Nation</th>
          <th>Weight</th>
          <th>Price</th>
          <th>Power</th>
          <th>Chance Of Fire</th>
          <th>Operations</th>
        </tr>
      </thead>
      <tbody>
        {% for engine in engines %}
          <tr>
            <td>{{ engine.name }}</td>
            <td>{{ engine.level }}</td>
            <td>{{ engine.nation.name }}</td>
            <td>{{ engine.weight }}</td>
            <td>{{ engine.price }}</td>
            <td>{{ engine.power }}</td>
            <td>{{ engine.chance_of_fire }}</td>
            <td class="col-sm-3">
              <ul class="list-inline col-sm-12">
                <li>
                  <button
                    class="btn btn-success btn-sm"
                    onclick='editModel({{engine.id}}, "engines")'
                     type="button" data-toggle="modal"
                     data-target="#modalEdit">
                    Edit
                  </button>
                </li>
                <li>
                  {{ form.open({action: 'EnginesController.destroy', params: {id: engine.id}, class: 'form_delete' }) }}
                    {{ csrfField }}
                    {{ form.submit('Delete', 'delete', { class: "btn btn-danger btn-sm" })}}
                  {{ form.close() }}
              </li>
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
</div>

{% include "admin/engines/create" %}
{% include "admin/engines/edit" %}

{% endblock %}
