<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">

    <link rel="stylesheet" href="/assets/css/bootstrap.css">
    <link rel="stylesheet" href="/assets/css/simple-sidebar.css">
    <link rel="stylesheet" href="/assets/css/navbar-fixed.css">
    <link rel="stylesheet" href="/assets/css/dropzone.css">
    <link rel="stylesheet" href="/style.css">
 
    <title>Wot Informer</title>
  </head>
  <body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="" style="padding-right: 20px; padding-left: 10px">
        <div class="navbar-header">

          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#app-navbar-collapse">
            <span class="sr-only">Toggle Navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>

          <a class="navbar-brand" href="/">
            Wot Informer
          </a>
        </div>

        <div class="collapse navbar-collapse" id="app-navbar-collapse">
          <!-- Left Side Of Navbar -->
          <ul class="nav navbar-nav">
            <li><a href="/admin">Admin</a></li>
          </ul>
          <!-- Right Side Of Navbar -->
          <ul class="nav navbar-nav navbar-right">
            <!-- Authentication Links -->

            {% if currentUser %}
              <li><a href="/logout">Logout</a></li>
            {% else %}
              <li><a href="/login">Login</a></li>
              <li><a href="/register">Register</a></li>
            {% endif %}
          </ul>
        </div>
      </div>
    </nav>

    <div id="wrapper">

      <div id="sidebar-wrapper">
        <ul class="sidebar-nav">
          <li><a href="/admin/files">Files</a></li>
          <li><a href="/admin/bodies">Bodies</a></li>
          <li><a href="/admin/guns">Guns</a></li>
          <li><a href="/admin/turrets">Turrets</a></li>
          <li><a href="/admin/engines">Engines</a></li>
          <li><a href="/admin/radios">Radios</a></li>
          <li><a href="/admin/suspensions">Suspensions</a></li>
          <li><a href="/admin/ammos">Ammos</a></li>
          <li><a href="/admin/crews">Crews</a></li>
          <li><a href="/admin/equipment">Equipment</a></li>
          <li><a href="/admin/consumables">Consumables</a></li>
          <li><a href="/admin/nations">Nations</a></li>
          <li><a href="/admin/vehicles">Vehicles</a></li>
          <li><a href="/admin/shellTypes">ShellTypes</a></li>
        </ul>
      </div>

      <div id="page-content-wrapper">
        <div class="container-fluid">
          <div class="row">
            <div class="col-lg-12">
              {% block content %}{% endblock %}
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="/assets/js/jquery.js"></script>
    <script src="/assets/js/bootstrap.js"></script>
    <script src="/assets/js/dropzone.js"></script>
    <script src="/assets/js/admin.js"></script>
  </body>
</html>
